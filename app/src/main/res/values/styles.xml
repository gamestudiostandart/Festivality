<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="DialogAnimationNew">
        <item name="android:windowEnterAnimation">@anim/dialog_open_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_close_animation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="UserInfoLineBetweenFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:background">@color/colorBackgraund</item>
    </style>

    <style name="UserInfoField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="UserInfoTextInTopField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">6.5dp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="UserInfoTextInBottomField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">17.5sp</item>
    </style>

</resources>
